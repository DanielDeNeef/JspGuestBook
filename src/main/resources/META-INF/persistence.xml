        xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="datasource" transaction-type="RESOURCE_LOCAL">
        <properties>
            <property name="java.persistence.jdbc.Driver" value="org.mariadb.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mariadb://noelvaes.eu/StudendDB"/>
            <property name="javax.persistence.jdbc.name" value="student"/>
            <property name="javax.persistence.jdbc.password" value="studend123"/>
